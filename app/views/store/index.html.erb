<div class="container">
  <div class="col-md-3">

        <p id="notice"><%= notice %></p>

<h1 align="center">Cat√°logo</h1>

<% cache @products do %>
    <% @products.each do |product| %>
        <% cache product do %>

              <h2><%= product.title %></h2>
              <%= image_tag(product.image_url, :style =>'width:200px', :class=>'img-rounded', :alt=>'Cinque Terre', :width=>'224', :height=>'236') %>
                    <br>
              <%= sanitize(product.description) %>

              <div class="price_line">
                <span class="price"><%= number_to_currency(product.price) %></span>
                <div class="buttons" style="margin-top: 10px; margin-bottom: 10px">
                <%= button_to 'Agregar al carrito', line_items_path(product_id: product), remote: true, :class=>'btn btn-info btn-block' %>
                </div>
              </div>


            <br>
        <% end %>

    <% end %>

<% end %>



    </div>

</div>
