
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
        <h2 align="center">Editar <%= resource_name.to_s.humanize %></h2>
        <br>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, :class =>'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Contrase単a" %> <i>(Deje en blanco si no desea cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contrase単a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control' %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contrase単a actual" %> <i>(Necesitamos su contrase単a actual para confirmar sus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class =>'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", :class=>'btn btn-info btn-block' %>
  </div>
<% end %>

<h3 align="center">Cancelar mi cuenta</h3>

<p>No estas agusto? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete, :class=>'btn btn-info btn-block'  %></p>

<%= link_to "Atras", :back, :class=>'btn btn-info btn-block' %>
      </div>

    </div>
  </div>
</div>